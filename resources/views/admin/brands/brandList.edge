    <script type="text/javascript" charset="utf-8">
      	$(document).ready( function () {
    // DataTables initialization         
			var brandTable = $('#brandTable').DataTable({
				dom :"<'myfilter'f><'mylength'l>t",
				info: false,
				responsive: true,
				bSort : true,
				fixedHeader: true,
				order : [[ 1, "asc" ]],
				paging : false,
				language: {
					search: "",
					searchPlaceholder: "Zoeken...",
					zeroRecords: "Geen data gevonden"
				},			
			});
			$('#dataTableWrapper').removeClass('dataTableParentHidden');
			$('div.dataTables_filter input').focus();
			//(RW) Click on table row
			$('#brandTable').on('click', 'tr', function () {
				var row = brandTable.row(this).data();
				var brandId = row[0];
				var path = "/admin/brand/edit/" + brandId;
				window.location.href = path;
			});
		});
    </script>
