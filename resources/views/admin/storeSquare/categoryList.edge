				},
				
			});
			$('#dataTableWrapper').removeClass('dataTableParentHidden');
			$('div.dataTables_filter input').focus();
	//(RW) Click on table row
			$('#storeSquareCategoryTable').on('click', 'tr', function () {
				var row = storeSquareCategoryTable.row(this).data();
				var categoryId = row[0];
				var path = "/admin/storesquare-category/edit/" + categoryId;
				window.location.href = path;
			});

		});
    </script>


	
			
